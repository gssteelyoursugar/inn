/* pages/index/evaluate/index.wxss */
.evas{
  width: 680rpx;
  margin: 0 auto;
  overflow: hidden;
  padding-bottom: 30rpx;
}
.evas-title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}
.list{
  display: flex;
  justify-content: space-between;
}
.list-data{
  width: 325rpx;
}
.data-wrap{
  width: 325rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  border:2rpx solid #f5f5f5;
  box-sizing: border-box;
}
.data-wrap .wrap-imgs{
  width: 100%;
  vertical-align: middle;
}
.data-wrap .wrap-centnt{
  width: 100%;
  background: #fff;
  overflow: hidden;
}
.wrap-centnt-box{
  width: 90%;
  margin: 10rpx auto;
}
.centnt-box-title{
  color: #333333;
  font-size: 26rpx;
  font-weight: 400;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.centnt-box-name {
  height: 65rpx;
  line-height: 65rpx;
  margin: 25rpx 0 10rpx;
  display: flex;
}
.centnt-box-name image{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  overflow: hidden;
}
.centnt-box-name-title{
  color: #333333;
  font-size: 25rpx;
  margin-left: 15rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}