/* pages/detail/index.wxss */

.top-icon-group {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row-reverse;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), transparent);
  padding: 30rpx 40rpx 20rpx;
  z-index: 10;
}

.msg {
  margin: 0 0rpx 0 40rpx;
}

.like image, .msg image {
  width: 44rpx;
  height: 44rpx;
}

.detail-swiper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: -1;
}

.detail-swiper swiper {
  height: 500rpx;
}

.swiper-img {
  width: 100%;
  height: 500rpx;
}

.detail-wrap {
  width: 750rpx;
  height: 1000rpx;
  z-index: 9;
  position: absolute;
  top: 420rpx;
}

.control-bar {
  width: 85%;
  margin: 0 auto;
  padding: 20rpx 20rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 50rpx 0 #e5e5e5;
}

.coll-info {
  display: flex;
  padding: 0 10rpx;
  font-size: 24rpx;
}

.tag {
  width: 50%;
  text-align: left;
  color: #f39557;
}

.coll {
  width: 50%;
  text-align: right;
  color: #333;
}

.title-rate {
  display: flex;
  padding: 10rpx 0;
}

.title-rate .title {
  width: 82%;
  font-size: 36rpx;
  margin: 4rpx 0;
}

.title-rate .rate {
  width: 18%;
  text-align: center;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx -2rpx #e5e5e5;
  margin-left: 10rpx;
  height: 108rpx;
}

.title-rate .rate .score {
  font-size: 36rpx;
  letter-spacing: -2rpx;
  line-height: 30rpx;
  margin-top: 16rpx;
  color: #f39557;
}

.title-rate .rate .score text {
  font-size: 22rpx;
  margin-left: 4rpx;
  color: #333;
}

.title-rate .rate .score-icon {
  line-height: 30rpx;
}

.info-box {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 30rpx 10rpx 50rpx;
  background: #f0f3f5;
  margin: 14rpx 0;
  border-radius: 8rpx;
  color: rgba(102, 96, 96, 0.87);
  font-size: 24rpx;
}

.info-item {
  width: 50%;
  padding: 10rpx 0;
}

.info-item text {
  padding-left: 10rpx;
}

.order-date {
  display: flex;
}

.start-time, .end-time {
  width: 45%;
  text-align: left;
  padding-left: 30rpx;
}

.start-time text, .end-time text {
  font-size: 22rpx;
  color: #a1a1a1;
}

.mid-text {
  width: 20%;
  line-height: 88rpx;
  padding-left: 40rpx;
  font-size: 26rpx;
  color: #666;
}

.date-item {
  line-height: 30rpx;
  font-size: 28rpx;
  color: #555;
}

.start-time .date-item text, .end-time .date-item text {
  font-weight: 500;
  font-size: 36rpx;
  color: #333;
}

.more-detail-bar {
  width: 100%;
  height: 1000rpx;
  background: #fff;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  margin-top: 40rpx;
}

.tabs {
  padding: 30rpx 20rpx 0;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
}

.tabs .tab-item {
  width: 15%;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  padding-bottom: 10rpx;
}

.tabs .tab-item text {
  position: relative;
  display: inline-block;
  font-size: 28rpx;
  padding-bottom: 10rpx;
  margin-top: 10rpx;
}

.tabs .tab-item .active {
  font-size: 32rpx;
  color: #333;
  font-weight: 800;
  margin-top: 0;
}

.tabs .tab-item text::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-bottom: 2px solid transparent;
  transform: scaleX(0.6);
  transition: all 0.5s;
}

.tabs .tab-item .active::before {
  border-bottom: 2px solid #efad52;
}

.more-detai-container {
  padding: 20rpx 0rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 20rpx 20rpx 0;
}

.more-text {
  padding: 0 20rpx;
  color: #f09b56;
  font-size: 26rpx;
  margin-top: 14rpx;
  font-weight: 500;
}

.text-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  background: #fff;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #3c3c3c;
  font-weight: 300;
  line-height: 50rpx;
}

.mask-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin: 50rpx 0;
}

.close-btn {
  position: absolute;
  bottom: 30rpx;
  text-align: center;
  left: 0;
  right: 0;
  font-size: 40rpx;
}

.spot-light {
  padding-bottom: 30rpx;
}

.light-title {
  padding: 0 20rpx;
  margin: 70rpx 0 30rpx;
  font-size: 36rpx;
  font-weight: 500;
}

.box-item {
  width: 40%;
  text-align: center;
  display: inline-block;
  font-size: 28rpx;
}

.box-item image {
  width: 44rpx;
  height: 60rpx;
}

.nowrap-box {
  font-size: 0;
  white-space: nowrap;
}

.item-title {
  font-size: 32rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  width: 280rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.locate-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  padding: 0 20rpx;
}

.locate-text .locate-icon {
  color: #f39557;
  font-size: 32rpx;
  margin-right: 4rpx;
}

.locate-map {
  padding: 0 20rpx;
  margin: 20rpx 0;
}

.locate-map image {
  width: 100%;
  height: 260rpx;
  border-radius: 20rpx;
}

.service-item {
  box-shadow: 0 0 10rpx 4rpx #f5f5f5;
  display: inline-block;
  text-align: center;
  width: 30%;
  margin: 10rpx 20rpx;
  padding: 30rpx 0;
  border-radius: 10rpx;
}

.service-item image {
  width: 52rpx;
  height: 52rpx;
}

.service-item .item-title {
  font-size: 28rpx;
}

.service-list {
  margin: 20rpx 0;
  display: flex;
}

.list-item {
  width: 33.33%;
  text-align: center;
}

.list-title {
  font-size: 28rpx;
  color: #333;
}

.list-content {
  font-size: 26rpx;
  color: #666;
  font-weight: 300;
}


.comment-wrap {
  margin-bottom: 150rpx;
}


