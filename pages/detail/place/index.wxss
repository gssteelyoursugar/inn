/* pages/home/reservation/reservation.wxss */
.bottom-yuding{
  padding-bottom: 150rpx;
  background: #fff;
}
/*预定信息详情*/
.Booking{
  margin: 30rpx;
  display: flex;
}
.Booking-left-image{
  width: 260rpx;
  height: 180rpx;
}
.Booking-left-image image{
  width: 100%;
  height: 100%;
}
.Booking-right{
  width: 100%;
  position: relative;
  margin-left: 20rpx;
}
.Booking-right-title{
  font-size: 30rpx;
  color: black;
  overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;
}
.Booking-right-datils{
  color: #767676;
  position: absolute;
  bottom: 10rpx;
}

/*入住离开时间*/
.reserve-time {
  display: flex;
  color: black;
  font-size: 35rpx;
  background: #fff;
}
.reserve-time-left{
  width: 40%;
  text-align: center;
}
.time-left-ruzhu{
  padding-top: 30rpx;
  margin: 15rpx 10rpx 0 0;
  color: #b4b4b4;
  font-size: 30rpx;
}
.time-left-name{
  height: 80rpx;
  line-height: 80rpx;
  padding-bottom: 30rpx;
  font-size: 35rpx;
}
.wanNum{
  width: 20%;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  border:1rpx solid #ccc;
  margin-top: 60rpx;
  color: #b4b4b4;
  font-size: 25rpx;
  border-radius: 10rpx;
}
.wanNum text{
  color: #ff6b8f;
  margin: 0 10rpx;
}
.reserve-time-right{
  width: 40%;
  text-align: center;
}
.time-right-likai{
  padding-top: 30rpx;
  margin: 15rpx 10rpx 0 0;
  color: #b4b4b4;
  font-size: 30rpx;
}
.reserve-time-bottom{
  height: 20rpx;
  background: #f7f7f7;
}
/*入住人数*/
.number{
  display: flex;
  margin: 30rpx;
  font-size: 30rpx;
}
.number-left{
  width: 50%;
}
.number-right{
  width: 50%;
  position: relative;
}
.floatx{
  position: absolute;
  right: 0;
  display:flex;
}
.number-right-image{
  width: 40rpx;
  height: 40rpx;
}
.number-right-num{
  padding: 0 20rpx;
}
.number-right-image image{
  width: 100%;
  height: 100%;
}

/*入住人*/
.person{
  display: flex;
  margin: 30rpx;
  font-size: 30rpx;
}
.person-name{
  margin: 30rpx;
  padding: 30rpx;
  background: #f7f7f7;
}
.person-left{
  width: 50%;
}
.person-right{
  width: 50%;
  position: relative;
  color: #b4b4b4;
}
.person-right-title{
  font-size: 28rpx;
}
.person-right-image{
 width: 30rpx;
  height: 30rpx;
  margin-top: 5rpx;
  margin-left: 5rpx;
}
.person-right-image image{
  width: 100%;
  height: 100%;
}

/*预定电话*/
.phone{
  display: flex;
  margin: 30rpx;
  font-size: 30rpx;
}
.phone-left{
  width: 40%;
}
.section{
  font-size: 30rpx;
  text-align: right;
}

/*优惠券*/
.vouchers{
  display: flex;
  margin: 30rpx;
  font-size: 30rpx;
}
.vouchers-left{
  width: 30%;
}
.vouchers-right{
  width: 70%;
  position: relative;
}
.vouchers-right-title{
  font-size: 28rpx;
  color: #009dbd;
}
.vouchers-right-image{
 width: 28rpx;
  height: 30rpx;
  margin-top: 5rpx;
  margin-left: 5rpx;
}
.vouchers-right-image image{
  width: 100%;
  height: 100%;
}
/*退订规则*/
.unsubscribe{
  margin: 30rpx;
}
.unsubscribe-title{
  font-size: 35rpx;
  color: black;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.unsubscribe-x{
  display: flex;
  white-space: nowrap;
  padding-bottom: 30rpx;
  width: 100%;
  height: 100%;
}
.unsub-scroll{
  height: 300rpx;
}
.unsubscribe-left{
  margin-left: 40rpx;
  display: inline-block;
  width: 400rpx;
  height: 200rpx;
  border-bottom: 1rpx solid #0aabcb;
  position: relative;
}
.unsub-left-top{
  width: 300rpx;
  margin: 30rpx 40rpx;
}
.unsub-left-top-feiyong{
  color: #13a3bf;
  background: #e1f6fa;
  white-space:pre-line;
  width: 300rpx;
  padding: 20rpx;
  border-radius: 5rpx;
  font-size: 25rpx;
}
.unsub-left-bottom{
  position: absolute;
  bottom: -15rpx;
}
.unsub-left-bottom-dian{
  border-radius: 50%;
  background: #13a3bf;
  width: 30rpx;
  height: 30rpx;
}
.unsub-left-bottom-success{
  position: absolute;
  bottom: -60rpx;
  left: -30rpx;
  color: #333;
  font-size: 25rpx;
  padding-top: 20rpx;
}

