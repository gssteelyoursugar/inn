/*底部支付*/
.pay{
  display: flex;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}
.pay-left{
  width: 50%;
  /* background: #daeef2; */
}
.pay-left-box{
  margin: 0 30rpx;
  display: flex;
  padding: 20rpx 0;
}
.box-amount{
  font-size: 25rpx;
  width: 80%;
}
.box-amount text{
  margin-left: 10rpx;
  color: #fe6b68;
  font-size: 35rpx;
}
.box-amount-yajin{
  color: black;
  font-size: 26rpx;
  /* text-align: center; */
}
.box-detail{
  width: 20%;
  margin-top: -10rpx;
}
.box-detail-image{
  width: 50rpx;
  height: 50rpx;
}
.box-detail-image image{
  width: 100%;
  height: 100%;
}
.box-detail-name{
  font-size: 26rpx;
}
.pay-right{
  width: 50%;
  background: linear-gradient(to right, #fe6b68, #ff6b8f);
  text-align: center;
  line-height: 120rpx;
  color: #fff;
  font-size: 35rpx;
  font-weight: 800;
}

/*明细弹出层*/
.pop-up{
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0;
  z-index: 100;
  background: #fff;
}
.pop-up-box{
  margin: 0 30rpx;
}
.pop-up-box .texts{
  margin-right: 10rpx;
}
.box-order{
  padding: 30rpx 0;
  font-size: 40rpx;
  display: flex;
}
.box-order-left{
  width: 50%;
  color: black;
}
.box-order-right{
  width: 50%;
  text-align: right;
  color: #ff6b8f;
}
.box-all{
  padding: 20rpx 0;
  display: flex;
  border-bottom: 1rpx solid #eee;
  color: black;
}
.box-all-left{
  width: 50%;
}
.box-all-right{
  width: 50%;
  text-align: right;
}
.guanModel{
  position: absolute;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 50rpx;
}
.guanModel-image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}
.guanModel-image image{
  width: 100%;
  height: 100%;
}