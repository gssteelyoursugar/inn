/* pages/order/list/list.wxss */

.content-wrap {
  display: flex;
  margin: 20rpx 30rpx 30rpx;
  border-radius: 10rpx;
  border: 1px solid #fff;
  background: #fff;
  height: 200rpx;
  overflow: hidden;
}

.img-item {
  width: 36%;
}

.img-item image {
  width: 100%;
  height: 200rpx;
}

.info-item {
  width: 64%;
}

.info-title {
  font-size: 32rpx;
  color: #333;
  display: flex;
  padding-left: 10rpx;
}

.info-title text:first-child {
  width: 75%;
  max-width: 328rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-title text:last-child {
  width: 25%;
  max-width: 108rpx;
  color: #ed5675;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-locate, .info-stay {
  font-size: 22rpx;
  margin: 10rpx;
  color: #999;
}

.info-locate {
  position: relative;
}

.info-locate .locate-icon {
  position: absolute;
  top: 4rpx;
}
.info-locate text {
  margin-left: 24rpx;
}
.info-rate {
  display: flex;
  font-size: 20rpx;
  line-height: 32rpx;
  color: #999;
  margin-top: 24rpx;
}

.info-rate text{
  width: 25%;
}

.status-btn {
  width: 25%;
  border: 1px solid #555;
  text-align: center;
  border-radius: 40rpx;
  color: #555;
  line-height: 40rpx;
}

.not-over {
  border: 1px solid #fed875;
  color: #fed875;
}
