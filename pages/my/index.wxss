/* pages/my/index.wxss */

page {
  background: #f0f3f5;
}

.my-container {
  background: #fff;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.header-bg {
  width: 100%;
  height: 250rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

.header-icon {
  font-size: 0;
}

.header-icon .icon {
  display: inline-block;
  width: 50%;
}

.header-icon .icon:last-child {
  text-align: right;
}

.header-icon .icon image {
  width: 40rpx;
  height: 40rpx;
  margin: 16rpx 20rpx;
}

.header-avatar {
  text-align: center;
  margin-top: -60rpx;
}

.header-avatar  image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-name {
  text-align: center;
  color: #333;
  font-size: 32rpx;
}

.real-name {
  width: 20%;
  margin: 20rpx auto;
  background: #fed897;
  border-radius: 40rpx;
  text-align: center;
  padding: 4rpx 0;
  font-size: 22rpx;
}

.my-category {
  display: flex;
  flex-wrap: wrap;
  padding: 5% 6%;
}

.my-category .cate-item {
  width: 33.33%;
  text-align: center;
  margin: 20rpx 0;
}

.my-category .cate-item image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.my-category .cate-item .cate-name {
  font-size: 24rpx;
  color: #333;
}

.join {
  width: 60%;
  margin: 0 auto;
  text-align: center;
  border-radius: 10rpx;
  background: #fff;
  padding: 16rpx 0;
  margin-top: 100rpx;
  color: #666;
}