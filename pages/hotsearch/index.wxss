/* pages/hotsearch /index.wxss */
/*顶部搜索*/
.search{
  background: #ffffff;
  width: 750rpx;
  height: 80rpx;
}
.search .search-warp{
  width: 700rpx;
  height: 70rpx;
  background: #f0f3f5;
  margin: 0 auto;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  font-size: 27rpx;
}
.search-warp image{
  margin-left: 30rpx;
  margin-right: 10rpx;
  width: 48rpx;
  height: 48rpx;
}
.weui-input{
  width: 80%;
  color: #333333;
}



.hot-heng{
  width: 730rpx;
  background: #f0f3f5;
  height: 8rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 5rpx 0rpx #e4e5e6de;
}

/*热门搜索*/
.main-hot{
  width: 700rpx;
  margin: 50rpx auto 0;
}
.maht-title{
  color: #333333;
  font-weight: bold;
  font-size: 33rpx;
}
.maht-btns {
  padding: 30rpx 0;
  overflow: hidden;
}
.maht-btns .btns-text{
  display: inline-block;
  padding: 6rpx 20rpx;
  color: #636363;
  border: 4rpx solid #f0f3f5;
  border-radius: 15rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  font-size: 27rpx;
}

/*历史记录*/
.main-history{
  width: 700rpx;
  margin: 0 auto;
}
.his-bar{
  display: flex;
  justify-content: space-between;
}
.history-title{
  color: #333333;
  font-weight: bold;
  font-size: 33rpx;
}
.his-bar image{
  margin-right: 20rpx;
  width: 35rpx;
  height: 35rpx;
}
.history-btns {
  padding: 30rpx 0 50rpx;
  overflow: hidden;
}
.history-btns .btns-text{
  display: inline-block;
  padding: 6rpx 20rpx;
  color: #636363;
  border: 4rpx solid #f0f3f5;
  border-radius: 15rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  font-size: 27rpx;
}