/* pages/hotmore/index.wxss */
page{
  background: #f4f4f5;
}
.dataTimeShow{
  z-index: 30;
  background: #ffffff;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
/*顶部内容*/
.hotbar{
  background: #fff;
  overflow: hidden;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 10;
  height: 140rpx;
}
.hotbar .hotbar-sou{
  margin: 0 auto;
  width: 700rpx;
  display: flex;
  justify-content: space-between;
  height: 70rpx;
}
.hotbar-sou .hotsou-inpus{
  margin-left: 50rpx;
  width: 570rpx;
  display: flex;
  border-radius: 40rpx;
  height: 70rpx;
  align-items: center;
  font-size: 27rpx;
  background: #f0f3f5;
}
.hotsou-inpus .inpus-name{
  display: flex;
  margin-left: 20rpx;
  position: relative;
}
.hotsou-inpus .inpus-name::before{
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 1rpx;
  height: 40rpx;
  background: #cccccc;
}
.hotsou-inpus .inpus-name .name-citi{
  color: #999999;
  width: 60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.hotsou-inpus .inpus-name image{
  width: 40rpx;
  height: 40rpx;
}
.hotsou-inpus .inpus-frame{
  display: flex;
  margin-left: 15rpx;
}
.hotsou-inpus .inpus-frame image{
  width: 48rpx;
  height: 48rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.hotsou-inpus .inpus-frame .weui-input{
  height: 70rpx;
  line-height: 70rpx;
  width: 80%;
  color: #333333;
}
.hotsou-icon{
  margin-top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.hotsou-icon image{
  width: 100%;
  height: 100%;
}
.hotbar-screen{
  height: 70rpx;
}
.screenbao{
  width: 650rpx;
  height: 70rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.screenbao-time{
  display: flex;
  align-items: center;
}
.screenbao-time image{
  width: 45rpx;
  height: 45rpx;
  margin-left: 15rpx;
}
.screenbao-time-name{
  margin-left: 10rpx;
  color: #333333;
  font-size: 27rpx;
}

/*内容区域*/
.res-hot{
  margin-top: 160rpx;
  overflow: hidden;
}
.resource{
 margin-top: 10rpx;
}
.resource-not-box{
  margin: 0 auto;
  width: 750rpx;
  margin-top: 50rpx;
}
.not-box-img{
  margin: 250rpx auto 0rpx;
  width: 300rpx;
  height: 300rpx;
}
.not-box-img image{
  width: 100%;
  height: 100%;
}
.not-box-title{
  text-align: center;
  color: #636363;
}