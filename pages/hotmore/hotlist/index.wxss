/* pages/hotmore/hotlist/index.wxss */
.list{
  margin: 0 auto;
  width: 700rpx;
  height: 550rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #ffffff;
}
.list-shows{
  position: relative;
}
.shows-master{
  width: 100%;
  height: 400rpx;
  vertical-align:top;
}
.shows-collect{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
}
.shows-collect image{
  width: 100%;
  height: 100%;
}
.shows-price{
  position: absolute;
  left: 30rpx;
  top: 280rpx;
  width: 100rpx;
  height: 90rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 15rpx;
  text-align: center;
}
.shows-price .price-money{
  margin-top: 10rpx;
  color: #ef5473;
  font-size: 20rpx;
}
.shows-price .price-money span{
  font-size: 34rpx;
  font-weight: 500;
}
.shows-price .price-title{
  color: #999999;
  font-size: 20rpx;
}

.list-content{
  position: relative;
}
.list-content-warp{
  width: 95%;
  margin: 10rpx auto;
}
.list-content-title{
  color: #000;
  font-size: 500;
  width: 500rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list-content-num{
  margin-top: 5rpx;
  color: #999999;
  font-size: 26rpx;
  width: 500rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list-content-location{
  display: flex;
  font-size: 26rpx;
  margin-top: 5rpx;
  color: #99999979;
}
.list-content-location image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 2rpx;
  margin-right: 2rpx;
}
.list-content-location-title{
  width: 465rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list-content-head{
  position: absolute;
  right: 30rpx;
  top: -60rpx;
  background: orange;
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #ffffff;
  border-radius: 50%;
}
.list-content-head image{
  width: 100rpx;
  height: 100rpx;
}
